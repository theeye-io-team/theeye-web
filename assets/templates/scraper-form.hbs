<form class="form-horizontal">
  <input data-hook="type" type="hidden" name="type" value="scraper" />
  <div data-hook="name-container" class="form-group">
    <label for="name" class="col-sm-3 control-label"> Name * </label>
    <div class="col-sm-9">
      <input data-hook="name" type="text" name="name" class="form-control" placeholder="e.g.: http://theeye.io public website">
    </div>
  </div>
  <div data-hook="hosts-container" class="form-group">
    <label for="hosts" class="col-sm-3 control-label"> Source Host * </label>
    <div class="col-sm-9 resource-host">
      <select data-hook="hosts" name="hosts" class="form-control" style="width:100%" multiple> </select>
    </div>
  </div>
  <div data-hook="looptime-container" class="form-group">
    <label for="looptime" class="col-sm-3 control-label"> Check Interval (mins) * </label>
    <div class="col-sm-9">
      <select data-hook="looptimes" name="looptime" class="form-control" style="width:100%"> </select>
    </div>
  </div>
  <div class="form-group">
    <label for="url" class="col-sm-3 control-label"> URL </label>
    <div class="col-sm-9">
      <input data-hook="url" type="text" name="url" class="form-control" placeholder="https://username:password@domain.com.ar/path?param=value">
    </div>
  </div>
  <div data-hook="tags-container" class="form-group">
    <label for="tags" class="col-sm-3 control-label"> Tags </label>
    <div class="col-sm-9">
      <div>
        <select data-hook="tags" class="form-control tooltiped select" title="" name="tags" multiple style="width:100%"> </select>
      </div>
    </div>
  </div>
  <!-- ADVANCED SECTION -->
  <div class="scraper-section-title" data-hook="advanced-section-toggler">
    <i class="tooltiped glyphicon glyphicon-chevron-down" title="advanced"></i>
  </div>

  <section data-hook="advanced" style="display:none;">
    <div class="form-group">
      <label for="method" class="col-sm-3 control-label"> Method </label>
      <div class="col-sm-9">
        <select data-hook="method" name="method" class="form-control" style="width:100%">
          <option value="GET">GET</option>
          <option value="DELETE">DELETE</option>
          <option value="POST">POST</option>
          <option value="PUT">PUT</option>
          <option value="PATCH">PATCH</option>
          <option value="OPTIONS">OPTIONS</option>
          <option value="HEAD">HEAD</option>
        </select>
      </div>
    </div>
    <div data-hook="body-container" class="form-group" style="display:none">
      <label for="body" class="col-sm-3 control-label"> Body </label>
      <div class="col-sm-9">
        <textarea data-hook="body" name="body" class="form-control" style="width:100%;"></textarea>
      </div>
    </div>
    <div class="form-group">
      <label for="timeout" class="col-sm-3 control-label"> Req. Timeout (secs) </label>
      <div class="col-sm-9">
        <select data-hook="timeouts" name="timeout" class="form-control" style="width:100%;"> </select>
      </div>
    </div>
    <div class="form-group">
      <label for="gzip" class="col-sm-3 control-label"> HTTP Compression </label>
      <div class="col-sm-3">
        <input data-hook=gzip type=checkbox name=gzip class="form-control" style="width:16px;" checked>
      </div>
      <label for="json" class="col-sm-3 control-label"> JSON Content </label>
      <div class="col-sm-3">
        <input data-hook=json type=checkbox name=json class="form-control" style="width:16px;">
      </div>
    </div>

    <div class="form-group">
      <label for="status_code" class="col-sm-3 control-label"> Status Code </label>
      <div class="col-sm-9">
        <input data-hook="status_code" type="text" name="status_code" class="form-control" placeholder="Match e.g. '2[0-9][0-9]' for the group 2XX success status codes" value="200">
      </div>
    </div>
    <div class="form-group">
      <label for="pattern" class="col-sm-3 control-label"> Success Pattern </label>
      <div class="col-sm-9">
				<div class="input-group">
					<label class="input-group-addon">
						<input data-hook=match-pattern-selection type=checkbox name=parser value=pattern>
					</label>
					<input data-hook="pattern" type="text" name="pattern" class="form-control" placeholder="e.g. '<h1>My Site Title</h1>', using RegEx ^[a-zA-Z0-9]{24}$">
				</div>
			</div>
		</div>
  </section>
</form>
