<div class="resource-container panel panel-default js-searchable-item"
  data-tags="{{ model.attributes.formatted_tags }}">
  <div class="panel-heading" role="tab">
    <h4 class="panel-title {{ model.attributes.type }}">
      <span class="collapsed"
        data-toggle="collapse"
        data-parent="#monitor-accordion"
        href="#collapse{{ model.attributes.id }}"
        aria-expanded="false"
        aria-controls="collapse{{ model.attributes.id }}">
        <div class="panel-title-content">
          <span class="panel-item name">
            {{ model.attributes.description }}
            <small> > {{ model.attributes.type }}</small>
          </span>
          <span class="panel-item icons">
            <button data-search="{{ model.attributes.description }}"
              class="btn btn-primary resource-search">
              <span class="glyphicon glyphicon-search"></span>
            </button>
            <a title="Workflow"
              data-hook="workflow-button"
              href="/admin/workflow?node={{ model.attributes.monitor.id }}"
              class="tooltiped btn-icon-image flowchart-icon">
            </a>
            <button class="btn btn-icon-image tooltiped" title="Stats">
              <span class="glyphicon glyphicon-stats"></span>
            </button>
            <button class="btn btn-icon-image tooltiped" title="Edit monitors">
              <span class="glyphicon glyphicon-edit"></span>
            </button>
            <div class="tooltiped state-icon state-resource-container">
              <span data-hook="state-icon" class="{{ stateIcon }}" title="{{ model.attributes.state }}">
              </span>
            </div>
          </span>
        </div>
      </span>
    </h4>
  </div>
  <!-- COLLAPSE -->
  <div id="collapse{{ model.attributes.id }}"
    class="panel-collapse collapse"
    role="tabpanel"
    aria-labelledby="heading{{ model.attributes.id }}">
    <div class="panel-body">
      <div>
        <h4>Host: {{ model.attributes.hostname }}</h4>
        <table class="table table-stripped">
          <thead>
            <tr>
              <th></th>
              <th>Type</th>
              <th>Status</th>
              <th>Last updated</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="text-center">
                <span class="state-icon "></span>
              </td>
              <td>{{ model.attributes.type }}</td>
              <td><span class="state_text">{{ model.attributes.state }}</span></td>
              <td><span class="state_last_update">
                  {{ model.attributes.last_update_formated }}
              </span></td>
            </tr>
            <!--
            <tr class="resource<%=subresource.id%>">
              <td class="text-center">
                <span class="state-icon <%=iconsDicc[subresource.state]%>"></span>
              </td>
              <td><%= subresource.type %></td>
              <td><span class="state_text"><%= subresource.state %></span></td>
              <td><span class="state_last_update"><%= moment(subresource.last_update).startOf('second').fromNow() %></span></td>
            </tr>
            -->
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
