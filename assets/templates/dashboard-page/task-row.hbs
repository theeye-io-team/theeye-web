<div class="tasks-container panel panel-default js-searchable-item"
  data-tags="{{ model.attributes.formatted_tags }}">
  <div class="panel-heading" role="tab">
    <h4 class="panel-title task">
      <span class="collapsed"
        data-toggle="collapse"
        data-parent="#task-accordion"
        href="#collapse{{ model.attributes.id }}"
        aria-expanded="false"
        aria-controls="collapse{{ model.attributes.id }}">
        <div class="panel-title-content">
          <span class="panel-item name">
            {{ model.attributes.name }}
            <small> > task ({{ model.attributes.hostname }})</small>
          </span>
          <div class="panel-item icons">
            <button data-hook="run" class="btn btn-icon-image tooltiped" title="Run!">
              <i class="fa fa-play" aria-hidden="true"></i>
            </button>
            <button data-hook="workflow" class="btn btn-icon-image tooltiped" title="Workflow">
              <i class="fa fa-sitemap" aria-hidden="true"></i>
            </button>
            <button data-hook="edit" class="btn btn-icon-image tooltiped" title="Edit">
              <i class="fa fa-edit" aria-hidden="true"></i>
            </button>
          </div>
        </div>
      </span>
    </h4>
  </div>
  <!-- COLLAPSE -->
  <div id="collapse{{ model.attributes.id }}"
    class="panel-collapse collapse"
    role="tabpanel"
    aria-labelledby="heading{{ model.attributes.id }}">
    <div class="panel-body">
      <div class="fields">
        <div class="field"><p>Name</p></div>
        <div class="field">{{ model.attributes.name }}</div>
      </div>
      <div class="fields">
        <div class="field"><p>Description</p></div>
        <div class="field">{{ model.attributes.description }}</div>
      </div>
      <div class="fields">
        <div class="field"><p>Hostname</p></div>
        <div class="field">{{ model.attributes.hostname }}</div>
      </div>
      <div class="fields" data-hook="job-result-container"></div>
    </div>
  </div>
</div>
