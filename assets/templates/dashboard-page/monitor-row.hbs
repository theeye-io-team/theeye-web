<div class="resource-container panel panel-default js-searchable-item"
  data-tags="{{ model.attributes.formatted_tags }}">
  <div class="panel-heading" role="tab">
    <h4 class="panel-title {{ model.attributes.type }}">
      <span class="collapsed"
        data-toggle="collapse"
        data-parent="#monitor-accordion"
        href="#collapse{{ model.attributes.id }}"
        aria-expanded="false"
        aria-controls="collapse{{ model.attributes.id }}">
        <div class="panel-title-content">
          <span class="panel-item name">
            {{ model.attributes.name }}
            <small> > {{ model.attributes.type }}</small>
          </span>
          <span class="panel-item icons">
            <section data-hook="monitor-icons-block" style="float:right;">
              <button data-hook="search"
                data-search="{{ model.attributes.name }}"
                class="btn btn-icon-image resource-search">
                <i class="fa fa-search" aria-hidden="true"></i>
              </button>
              <button data-hook="workflow" class="btn btn-icon-image tooltiped" title="Workflow">
                <i class="fa fa-sitemap" aria-hidden="true"></i>
              </button>
              <button data-hook="stats" class="btn btn-icon-image tooltiped" title="Stats">
                <i class="fa fa-bar-chart" aria-hidden="true"></i>
              </button>
              <button data-hook="edit" class="btn btn-icon-image tooltiped" title="Edit monitors">
                <i class="fa fa-edit" aria-hidden="true"></i>
              </button>
            </section>
            <div class="tooltiped state-icon state-resource-container">
              <!-- state_severity is a model object derived property, not an attribute -->
              <span data-hook="state-icon" class="{{ stateIcon }}" title="{{ model.state_severity }}">
              </span>
            </div>
          </span>
        </div>
      </span>
    </h4>
  </div>
  <!-- COLLAPSE -->
  <div data-hook="collapse-container" id="collapse{{ model.attributes.id }}"
    class="panel-collapse collapse"
    role="tabpanel"
    aria-labelledby="heading{{ model.attributes.id }}">
    <div class="panel-body">
      <div>
        <h4>Host: {{ model.attributes.hostname }}</h4>
        <table class="table table-stripped">
          <thead>
            <tr data-hook="title-cols">
              <th></th>
              <th>Type</th>
              <th>Status</th>
              <th>Last updated</th>
              <th></th>
            </tr>
          </thead>
          <tbody data-hook="submonitors-container">
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
