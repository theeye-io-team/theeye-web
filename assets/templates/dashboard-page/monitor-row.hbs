<div class="resource-container panel panel-default js-searchable-item"
  data-tags="{{ model.attributes.formatted_tags }}">
  <div class="panel-heading" role="tab">
    <h4 data-hook="monitor-icon" class="panel-title-icon"><i></i></h4>
    <h4 class="panel-title">
      <span class="collapsed"
        data-toggle="collapse"
        data-parent="#monitor-accordion"
        href="#collapse{{ model.attributes.id }}"
        aria-expanded="false"
        aria-controls="collapse{{ model.attributes.id }}">
        <div class="panel-title-content">

          <span class="panel-item name">
            {{ model.attributes.name }}
            <small> > {{ model.attributes.type }}</small>
          </span>

          <section data-hook="monitor-icons-block" style="float:right;">
            <!-- DESKTOP ICONS MENU { -->
            <div data-hook="buttons-container" class="panel-item icons panel-item-desktop"> </div>
            <!-- } DESKTOP ICONS MENU -->
            <!-- MOBILE ICONS MENU { -->
            <div class="panel-item icons dropdown panel-item-mobile">
              <button class="btn dropdown-toggle btn-primary simple-btn"
                type="button"
                id="dropdownMenu"
                data-toggle="dropdown"
                aria-haspopup="true"
                aria-expanded="true">
                <i class="fa fa-ellipsis-v" aria-hidden="true"></i>
              </button>
              <ul data-hook="buttons-container" class="dropdown-menu" aria-labelledby="dropdownMenu1"> </ul>
            </div>
            <!-- } MOBILE ICONS MENU -->
          </section>

          <!-- state_severity is a model object derived property, not an attribute -->
          <div class="panel-item tooltiped state-icon state-resource-container">
            <span data-hook="state-icon" class="{{ stateIcon }}" title="{{ model.state_severity }}">
            </span>
          </div>

        </div>
      </span>
    </h4>
  </div>
  <!-- COLLAPSE -->
  <div data-hook="collapse-container" id="collapse{{ model.attributes.id }}"
    class="panel-collapse collapse"
    role="tabpanel"
    aria-labelledby="heading{{ model.attributes.id }}">
    <div class="panel-body">
      <div>
        <h4>Host: {{ model.attributes.hostname }}</h4>
        <table class="table table-stripped">
          <thead>
            <tr data-hook="title-cols">
              <th></th>
              <th>Type</th>
              <th>Status</th>
              <th>Last updated</th>
              <th></th>
            </tr>
          </thead>
          <tbody data-hook="submonitors-container">
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
