<div class="taskRow">
  <div class="tasks-container panel panel-default js-searchable-item"
    data-tags="{{ model.formatted_tags }}">
    <div class="panel-heading" role="tab">
      <h4 class="panel-title task">
        <span class="collapsed"
          data-toggle="collapse"
          data-parent="#task-accordion"
          href="#task_{{ model.id }}"
          aria-expanded="false"
          aria-controls="task_{{ model.id }}">
          <div class="panel-title-content">

            <span class="panel-item name">
              {{ model.name }}
              <small> > task ({{ model.hostname }})</small>
            </span>

            <!-- DESKTOP ICONS MENU { -->
            <div data-hook="buttons-container" class="panel-item icons panel-item-desktop">
            </div>
            <!-- } DESKTOP ICONS MENU -->

            <!-- MOBILE ICONS MENU { -->
            <div class="panel-item icons dropdown panel-item-mobile">
              <button class="btn dropdown-toggle btn-primary simple-btn"
                type="button"
                id="dropdownMenu"
                data-toggle="dropdown"
                aria-haspopup="true"
                aria-expanded="true">
                <i class="fa fa-ellipsis-v" aria-hidden="true"></i>
              </button>
              <ul data-hook="buttons-container" class="dropdown-menu" aria-labelledby="dropdownMenu1"></ul>
            </div>
            <!-- } MOBILE ICONS MENU -->

            <!-- RUN TASK BUTTON -->
            <div data-hook="execute-button-container" class="panel-item icons run-task-icon">
            </div>
          </div>
        </span>
      </h4>
    </div>
    <!-- COLLAPSE { -->
    <div id="task_{{ model.id }}"
      class="panel-collapse collapse"
      role="tabpanel"
      aria-labelledby="heading_{{ model.id }}">
      <div class="panel-body">
        <div>
          <h4>Host: {{ model.hostname }}</h4>
          <table class="table table-stripped">
            <thead>
              <tr data-hook="title-cols">
                <th>Type</th>
                <th>Description</th>
                <th>Hostname</th>
                <th>Last Run</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td> <span data-hook="type"></span> </td>
                <td> <span data-hook="description"></span> </td>
                <td> <span data-hook="hostname"></span> </td>
                <td>
                  <a href="#" data-hook="last_exec" class="btn btn-primary btn-sm fa fa-file-text-o"></a>
									&nbsp;
									<i data-hook="last-job-state" class="fa"></i>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="fields" data-hook="job-result-container"></div>
      </div>
    </div>
    <!-- } END COLLAPSE -->
  </div>
</div>
