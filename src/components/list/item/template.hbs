<div class="itemRow panel panel-default js-searchable-item"
  data-item-id="model.id"
  data-item-name="model.username"
  data-tags="view.tags">
  <div class="panel-heading" role="tab" id="heading+model.id">
    <h4 class="panel-title">
      <span class="collapsed" data-toggle="collapse"
        data-parent="#new-accordion"
        href="#collapse+model.id"
        aria-expanded="false"
        aria-controls="collapse+model.id">
        <div class="panel-title-content">

          <!-- model select button -->
          <span data-hook="left-container">
            <button class="btn btn-primary rowSelector simple-btn">
              <span data-hook="selectable" class="glyphicon glyphicon-unchecked"></span>
            </button>
          </span>

          <span class="panel-item name">
            <span data-hook="item_name"></span>
            <small> > <span data-hook="item_description"></span> </small>
          </span>

          <!-- model actions button container -->
          <div class="panel-item icons" data-hook="action-buttons"> </div>

        </div>
      </span>
    </h4>
  </div>

  <!-- collapsible content -->
  <div id="collapse{{ model.id }}"
    class="panel-collapse collapse"
    role="tabpanel"
    aria-labelledby="heading{{ model.id }}">
    <div data-hook="collapsed-content" class="panel-body"> </div>
  </div>
</div>
