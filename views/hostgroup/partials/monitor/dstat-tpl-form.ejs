<form id="dstatResourceForm" action="/resource" class="form-horizontal">
  <input type="hidden" name="monitor_type" value="dstat">
  <input type="hidden" name="description" value="dstat">
  <div class="form-group">
    <div class="col-sm-11">
      <h4>Thresholds Check Limits</h4>
    </div>
  </div>
  <div class="form-group">
    <label for="cpu" class="col-sm-3 control-label">CPU %</label>
    <div class="col-sm-8">
      <input data-hook="cpu" type="number" min="0" max="100" name="cpu" class="form-control">
    </div>
  </div>
  <div class="form-group">
    <label for="mem" class="col-sm-3 control-label">Memory %</label>
    <div class="col-sm-8">
      <input data-hook="mem" type="number" min="0" max="100" name="mem" class="form-control">
    </div>
  </div>
  <div class="form-group">
    <label for="cache" class="col-sm-3 control-label">Swap %</label>
    <div class="col-sm-8">
      <input data-hook="cache" type="number" min="0" max="100" name="cache" class="form-control">
    </div>
  </div>
  <div class="form-group">
    <label for="disk" class="col-sm-3 control-label">Disk %</label>
    <div class="col-sm-8">
      <input data-hook="disk" type="number" min="0" max="100" name="disk" class="form-control">
    </div>
  </div>
  <div class="form-group">
    <label for="looptime" class="col-sm-3 control-label">Check Interval (mins)</label>
    <div class="col-sm-8">
      <select data-hook="looptime" name="looptime" class="form-control">
        <option value="0" disabled selected><strong>select check interval</strong></option>
        <% looptimes.forEach(function(t) { %>
        <option value="<%= t.id %>"><strong><%= t.value %></strong></option>
        <% }); %>
      </select>
    </div>
  </div>
</form>
<!-- end modal body -->
