<form data-hook="script-monitor-form" id="scriptResourceForm" action="/resource" class="form-horizontal">
  <input data-hook="monitor_type" type="hidden" name="monitor_type" value="script"></input>
  <input data-hook="resource_id" type="hidden" name="resource_id" value=""></input>
  <div class="form-group">
    <label for="name" class="col-sm-3 control-label"> Name * </label>
    <div class="col-sm-9">
      <input data-hook="name" type="text" name="name" class="form-control" placeholder="eg: My Web Site"></input>
    </div>
  </div>
  <div class="form-group">
    <label for="hosts" class="col-sm-3 control-label"> Source Host * </label>
    <div class="col-sm-9 resource-host">
      <select multiple data-hook="hosts" name="hosts" class="form-control">
        <% hosts.forEach(function(h) { %>
        <option value="<%=h.id%>"><strong><%=h.hostname%></strong></option>
        <% }); %>
      </select>
      <!-- <input name="host_id" value="" class="hiddenHostInput"> -->
    </div>
  </div>
  <div class="form-group">
    <label for="script" class="col-sm-3 control-label"> Select Script * </label>
    <div class="col-sm-5">
      <select data-hook="script_id" id="script_id" name="script_id" class="form-control">
        <option value disabled selected></option>
        <% scripts.forEach(function(s) { %>
        <option value="<%=s.id%>"><strong><%= s.filename %></strong></option>
        <% }); %>
      </select>
    </div>
    <div class="col-sm-4">
      <a class="createScript scripter btn btn-block btn-primary">Create a new script</a>
    </div>
  </div>
  <div class="form-group">
    <label for="looptime" class="col-sm-3 control-label"> Check Interval (mins) * </label>
    <div class="col-sm-9">
      <select data-hook="looptime" name="looptime" class="form-control">
        <option value="0" disabled selected><strong>select check interval</strong></option>
        <% looptimes.forEach(function(t) { %>
        <option value="<%= t.id %>"><strong><%= t.value %></strong></option>
        <% }); %>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label for="tags" class="col-sm-3 control-label"> Tags </label>
    <div class="col-sm-9">
      <div>
        <select class="form-control select" name="tags" data-hook="tags" multiple style="width:100%">
        </select>
      </div>
    </div>
  </div>
  <!-- ADVANCED -->
  <div class="scraper-section-title" data-hook="advanced-section-toggler">
    <label>Advanced</label>
    <i class="tooltiped glyphicon glyphicon-chevron-down" title="advanced"></i>
  </div>
  <section data-hook="advanced" style="display:none">
    <div class="form-group">
      <label for="script_runas" class="col-sm-3 control-label"> RunAs </label>
      <div class="col-sm-9">
        <div>
          <input class="form-control" type="text" name="script_runas" data-hook="script_runas" placeholder="sudo -u username %script%" >
        </div>
      </div>
    </div>
    <div class="form-group">
      <label for="script_arguments" class="col-sm-3 control-label"> Script Arguments </label>
      <div class="col-sm-9">
        <div id="script-arguments-input">
          <input class="form-control" type="text" name="script_arguments" data-hook="script_arguments" placeholder="eg: --exclude-dir='node_modules'">
        </div>
      </div>
    </div>
    <div class="form-group" style="display:none;">
      <label for="disabled" class="col-sm-3 control-label">Disabled</label>
      <div class="col-sm-9">
        <input data-hook="disabled" type="checkbox" name="disabled" class="form-control" style="width:16px;">
      </div>
    </div>
  </section>
</form>
