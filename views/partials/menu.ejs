<script type="text/javascript">
  $(document).ready(function () {
    var links = $('.nav li a');
    $.each(links, function(key, value){
      $(this).removeClass('active');
      if(value.href == document.URL){
        var $parent = $(this).parent();
        if (!$parent.hasClass('active')) {
          $parent.addClass('active');
        }
      }
    });
  });
</script>
