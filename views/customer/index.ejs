<% block('scripts', '<script> $(document).ready(function(){ new CustomersPageInit(); }); </script>') %>

<!-- Main  -->
<div class="admin-container">
  <div class="js-searchable-box">
    <form>
      <input type="text" placeholder="Find a Customer">
      <button class="clean"><i class="glyphicon glyphicon-remove"></i></button>
      <button class="search"><i class="glyphicon glyphicon-search"></i></button>
    </form>
  </div>
  <div class="admin-panel customers-admin">
    <h3>Organizations Admin</h3>
    <div>
      <div class="table-header admin">
        <button class="mass-action massChecker btn btn-primary simple-btn tooltiped"
          title="Select all"
          aria-label="Center Align">
          <span class="massiveSelector glyphicon glyphicon-unchecked"></span>
        </button>

        <span class="title">Organizations &nbsp;<i data-hook="help"></i></span>
        <span class="title separator">|</span>

        <button class="createCustomer btn btn-primary simple-btn tooltiped" data-placement="right" title="Create new customer" aria-label="Left Align" data-toggle="modal" data-target="#create-customer">
          <span class="glyphicon glyphicon-plus"></span>
          <i class="menu-title-desktop">New Organization</i>
        </button>

        <button class="mass-action pull-right massDelete btn btn-primary simple-btn tooltiped"
          title="Delete selected customers"
          aria-label="Center Align">
          <span class="glyphicon glyphicon-trash"></span>
        </button>
      </div>
      <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
        <% customers.forEach( function(customer, key) {
          var tags = [
            "customer",
            customer.name,
            customer.description,
            customer.emails,
            "customer="+ customer.id
          ].join(','); %>
          <div class="itemRow panel panel-default js-searchable-item" data-item-id="<%= customer.id %>" data-item-name="<%= customer.name %>" data-tags="<%= tags %>">
            <div class="panel-heading" role="tab" id="heading<%= customer.id %>">
              <h4 class="panel-title">
                <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapse<%= customer.id %>" aria-expanded="false" aria-controls="collapse<%= customer.id %>">
                  <div class="panel-title-content">
                    <button class="rowSelector btn btn-primary simple-btn tooltiped" title="Select customer" aria-label="Center Align">
                      <span class="selectorIcon glyphicon glyphicon-unchecked"></span>
                    </button>
                    <span class="panel-item name" id="<%= customer.id %>"><%= customer.name %></span>

                    <!-- DESKTOP/MOBILE ICONS MENU { -->
                    <div class="panel-item icons panel-item-desktop">
                      <%- partial('./partials/buttons.ejs',{ customer: customer }) %>
                    </div>
                    <div class="panel-item icons dropdown panel-item-mobile">
                      <button class="btn dropdown-toggle btn-primary simple-btn"
                        type="button"
                        id="dropdownMenu"
                        data-toggle="dropdown"
                        aria-haspopup="true"
                        aria-expanded="true">
                        <i class="fa fa-ellipsis-v" aria-hidden="true"></i>
                      </button>
                      <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        <%- partial('./partials/buttons.ejs',{ customer: customer }) %>
                      </ul>
                    </div>
                    <!-- } DESKTOP/MOBILE ICONS MENU -->

                  </div>
                </a>
              </h4>
            </div>
            <div id="collapse<%= customer.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading<%= customer.id %>">
              <div class="panel-body">
                <div>
                  <h4>Description</h4>
                  <p> <%= customer.description %> </p>
                  <h4>Emails</h4>
                  <p> <%= customer.emails %> </p>
                </div>
              </div>
            </div>
          </div> <!-- end item -->
        <% }); %>
      </div> <!-- end panel -->
    </div> <!-- Tableresults -->
  </div>
</div> <!-- main -->


<%- include ./partials/create-modal.ejs %>
<%- include ./partials/edit-modal.ejs %>
<%- include ./partials/agent-modal.ejs %>
