<% block('scripts', '<script src="/js/dependencies/lodash.min.js"></script>') %>
<% block('scripts', '<script src="/js/bootstrap/alert.js"></script>') %>
<% block('scripts', '<script src="/js/application/admin/customer.js"></script>') %>
<% block('scripts' , '<script src="/js/application/searchbox.js"></script>')%>

<!-- Main  -->
<div class="container admin-container">

  <div class="js-searchable-box">
    <form>
      <input type="text" placeholder="Find a Customer">
      <button class="clean"><i class="glyphicon glyphicon-remove"></i></button>
      <button class="search"><i class="glyphicon glyphicon-search"></i></button>
    </form>
  </div>

  <div class="customers-admin">
    <h3>Customers Admin</h3>
    <div>
      <div class="table-header admin">
        <span class="title panel-item name">Customers &nbsp; &nbsp; |</span>

        <button class="createCustomer btn btn-default simple-btn new-btn tooltiped" data-placement="right" title="Create new customer" aria-label="Left Align" data-toggle="modal" data-target="#create-customer">
          <span class="glyphicon glyphicon-plus"></span>
          New Customer
        </button>
      </div>
      <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
        <% customers.forEach( function(customer, key) { %>
          <%
          var tags = [
            "customer",
            customer.name,
            customer.description,
            customer.emails,
            "customer="+ customer.id
          ].join(',');
          %>
          <div class="panel panel-default js-searchable-item" data-tags="<%= tags %>">
            <div class="panel-heading" role="tab" id="heading<%= customer.id %>">
              <h4 class="panel-title">
                <a class="collapsed" data-toggle="collapse"  data-parent="#accordion" href="#collapse<%= customer.id %>" aria-expanded="false" aria-controls="collapse<%= customer.id %>">
                  <div class="panel-title-content">
                    <span class="panel-item name" id="<%= customer.id %>"><%= customer.name %></span>
                    <div class="panel-item icons">
                      <!-- buttons -->
                      <!-- edit -->
                      <button
                        class="editCustomer btn btn-default simple-btn tooltiped"
                        title="Edit customer"
                        aria-label="Center Align"
                        data-customer-id="<%= customer.id %>"
                        data-toggle="modal"
                        data-target="#edit-customer">
                        <span class="glyphicon glyphicon-edit"></span>
                      </button>
                      <!-- delete -->
                      <button
                        class="deleteCustomer btn btn-default simple-btn tooltiped"
                        title="Delete customer"
                        aria-label="Center Align"
                        data-customer-id="<%= customer.id %>"
                        data-customer-name="<%= customer.name %>" >
                        <span class="glyphicon glyphicon-trash"></span>
                      </button>
                      <!-- curlpopup -->
                      <button
                        class="seeAgentCurl btn btn-default simple-btn tooltiped"
                        title="Check agent"
                        aria-label="Center Align"
                        data-customer-name="<%= customer.name %>">
                        <span class="glyphicon glyphicon-download"></span>
                      </button>
                      <!-- /buttons -->
                    </div>
                  </div>
                </a>
              </h4>
            </div>
            <div id="collapse<%= customer.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading<%= customer.id %>">
              <div class="panel-body">
                <div>
                  <h4>Description</h4>
                  <p> <%= customer.description %> </p>
                  <h4>Emails</h4>
                  <p> <%= customer.emails %> </p>
                </div>
              </div>
            </div>
          </div> <!-- end item -->
        <% }); %>
      </div> <!-- end panel -->
    </div> <!-- Tableresults -->
  </div>
</div> <!-- main -->


<%- include ./partials/create-modal.ejs %>
<%- include ./partials/edit-modal.ejs %>
<%- include ./partials/agent-modal.ejs %>
