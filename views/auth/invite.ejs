<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

	<h1><span class="fa fa-sign-in"></span> Invite user</h1>

	<!-- show any messages that come back with authentication -->
	<% if ( typeof(errors)!="undefined" && errors.length > 0) { %>
		<div class="alert alert-danger"><%= __(errors[0])  %></div>
	<% } %>

	<!-- LOGIN FORM -->
     <form role="form" action="/auth/local/invite" method="post">
		<div class="form-group">
			<label>Email</label>
			<input type="text" class="form-control" name="email" placeholder="Email">
		</div>
		
		<div class="form-group">
			<label>Credential</label>
			<div>
			<select id="credential" class="form-control" name="credential">
				<option value="admin"> Admin </option>
			</select>
			</div>
		</div>
		
		<!--
		<div class="form-group">
			<label>Organizations</label>
			<div>
			<select id="customers" class="form-control" name="customers" multiple="multiple">
			<% customers.forEach( function(customer, key){ %>
				<option value="<%= customer %>"> <%= customer %> </option>
			<% }); %>
			</select>
			</div>
		</div>
		-->
		
		<input type="hidden" value="<%= req.session.customer %>" name="customer" />
		<button type="submit" class="btn btn-warning btn-lg">Invite</button>
	</form>
	<hr>


</div>

</div>
</body>
</html>

