<!-- Main  -->
<div class="mainContainer">

  <div class="loginBox">
    <!-- show any messages that come back with authentication -->
    <% if ( typeof(errors)!="undefined" && errors.length > 0) { %>
    <div class="alert alert-danger"><%= __(errors[0])  %></div>
    <% } %>
    <h1>Sign In to theeye.io</h1>
    <!--  no por ahora. <a href="#" class="sign facebook"><i class="fa fa-facebook"></i>Facebook</a>
    <a href="#" class="sign twitter"><i class="fa fa-twitter"></i>Twitter</a> -->
    <a href="/auth/google"  class="sign google"><i class="fa fa-google-plus"></i>Google+</a>
    <div class="or"><span>or</span></div>

    <form class="signIn" role="form" action="/auth/local" method="post" style="margin-bottom:20px;">
      <input type="text" name="identifier" placeholder="User or email">
      <input type="password" name="password" required placeholder="Password">
      <button type="submit">Sign in</button>
      <span class="forgotLink">Forgot Password?</span>
    </form>

    <form class="forgotForm" method="post" style="margin-bottom:20px;">
      <input name="email" type="text" placeholder="User email">
      <button class="retrivePassword">Send password</button>
      <span class="cancelLink">Back</span>
    </form>


  </div>
</div>

<% block('scripts', '<script> $(document).ready(function(){ new LoginPageInit(); }); </script>') %>
